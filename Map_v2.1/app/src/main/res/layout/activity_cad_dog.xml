<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GreenBg4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@android:style/Widget.Holo.Light.TextView"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Adiconar foto"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <ImageButton
            android:background="@drawable/round_button"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:id="@+id/dogFoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dogavatar2_trans"
            android:text="ok"
            android:onClick="GetImage"/>


        <EditText
            style="@android:style/Widget.Holo.Light.EditText"
            android:id="@+id/dogNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:layout_marginTop="57dp"
            android:layout_below="@+id/dogFoto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            style="@android:style/Widget.Holo.Light.EditText"
            android:id="@+id/dogDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="top|left"
            android:hint="Descrição"
            android:lines="3"
            android:maxLines="10"
            android:minLines="3"
            android:scrollbars="vertical"
            android:layout_below="@+id/dogDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button

            style="@android:style/Widget.Holo.Light.Button"
            android:id="@+id/btn_salvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/textView"
            android:onClick="ClickSalvar"
            android:text="Salvar"
            android:layout_alignBottom="@+id/btn_cancelar"
            android:layout_centerVertical="true"
            android:layout_below="@+id/dogDesc" />

        <Button

            style="@android:style/Widget.Holo.Light.Button"
            android:id="@+id/btn_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:onClick="ClickCancelar"
            android:text="Cancelar"
            android:layout_centerVertical="true"
            android:layout_below="@+id/dogDesc" />

        <TextView
            style="@android:style/Widget.Holo.Light.EditText"
            android:id="@+id/dogDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CallCalendar"
            android:hint="Data"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dogNome"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</ScrollView>
